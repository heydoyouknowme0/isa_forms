// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"

}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model form {
  id          Int       @id @default(autoincrement())
  title               String
  description         String            @default("")
  visible_to          String[]
  questions                 String          @default("[]")
  on_submit_message         String            @default("Your response has been recorded.")
  is_editing_allowed        Boolean
  is_single_response        Boolean     @default(true)
  is_view_analytics_allowed Boolean     @default(false)
  is_shuffled               Boolean     @default(false)
  is_copy_sent              Boolean     @default(false)
  is_quiz                   Boolean     @default(false)
  expiry_date               DateTime?
  is_active                 Boolean     @default(true)
  persistant_url            String?
  is_pulished               Boolean     @default(false)
  form_submission           form_submission[]
  form_questions            form_questions[]

}

model form_submission {
  id          Int       @id @default(autoincrement())
  created_at  DateTime  @default(now())
  email       String
  form_id     Int
  form        form      @relation(fields: [form_id], references: [id])
}

model form_questions {
  id                    Int       @id @default(autoincrement())
  form_id               Int
  question              String
  description           String
  is_required           Boolean   @default(true)
  input_type            String
  choices               String?
  mime_type             String?
  range                 String?
  page_number           Int       @default(0)
  marks                 Int       @default(0)
  form                  form      @relation(fields: [form_id], references: [id])
}
